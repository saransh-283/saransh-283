---
import BriefcaseIcon from '@icons/briefcase.astro';
import GithubIcon from '@icons/github.astro';
import HomeIcon from '@icons/home.astro';
import MessageIcon from '@icons/message.astro';
import PuzzleIcon from '@icons/puzzle.astro';
import EmailIcon from '@icons/email.astro';
import LinkedinIcon from '@icons/linkedin.astro';

type NavItem = {
	label: string;
	href: string;
	icon?: any;
};

const pathname = Astro.url?.pathname ?? '/';

const navItems: NavItem[] = [
	{ label: 'Home', href: '/', icon: HomeIcon },
	{ label: 'About', href: '/about', icon: MessageIcon },
	{ label: 'Projects', href: '/projects', icon: BriefcaseIcon },
	{ label: 'Services', href: '/services', icon: PuzzleIcon },
	{ label: 'Contact', href: '/contact', icon: EmailIcon },
];

const isActive = (href: string) => {
	if (href === '/') return pathname === '/';
	return pathname === href || pathname.startsWith(href + '/');
};
---

<aside class="hidden shrink-0 lg:block">
	<div class="sticky top-0 flex h-screen flex-col px-6 py-8">
		<div class="flex items-center gap-3">
			<img
				src="profile.jpg"
				alt="Profile photo"
				width="44"
				height="44"
				class="h-11 w-11 rounded-full object-cover"
				loading="eager"
			/>
			<div class="leading-tight">
				<div class="text-sm font-semibold text-neutral-900">Saransh Kawadkar</div>
				<div class="text-xs text-neutral-500">Software Engineer</div>
			</div>
		</div>

		<nav class="mt-8">
			<ul class="space-y-1">
				{navItems.map((item) => (
					<li>
						<a
							href={item.href}
							class:list={[
								'flex items-center gap-3 rounded-xl pl-3 pr-12 py-2 text-sm text-neutral-700 transition',
								isActive(item.href)
									? 'bg-white text-neutral-900 shadow-sm ring-1 ring-black/5'
									: 'hover:bg-white/60 hover:text-neutral-900',
							]}
						>
							{item.icon && <item.icon aria-hidden="true" className={`h-4 w-4${isActive(item.href) ? ' text-blue-700' : ''}`} />}
							<span>{item.label}</span>
						</a>
					</li>
				))}
			</ul>
		</nav>

		<div class="mt-10">
			<div class="text-xs font-semibold uppercase tracking-wide text-neutral-500">Socials</div>
			<ul class="mt-3 space-y-2 text-sm">
				<li>
					<a class="flex items-center gap-2 text-neutral-600 hover:text-neutral-900" href="https://github.com/saransh-283" target="_blank" rel="noopener">
						<GithubIcon className="h-4 w-4" />
						<span>Github</span>
					</a>
				</li>
				<li>
					<a class="flex items-center gap-2 text-neutral-600 hover:text-neutral-900" href="https://www.linkedin.com/in/saransh-kawadkar" target="_blank" rel="noopener">
						<LinkedinIcon className="h-4 w-4" />
						<span>LinkedIn</span>
					</a>
				</li>
				<li>
			</ul>
		</div>
	</div>
</aside>
