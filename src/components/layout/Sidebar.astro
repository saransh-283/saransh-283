---
import BriefcaseIcon from '@icons/briefcase.astro';
import GithubIcon from '@icons/github.astro';
import HomeIcon from '@icons/home.astro';
import MessageIcon from '@icons/message.astro';
import PuzzleIcon from '@icons/puzzle.astro';
import EmailIcon from '@icons/email.astro';
import LinkedinIcon from '@icons/linkedin.astro';
import FiverrIcon from '@icons/fiverr.astro';

type NavItem = {
	label: string;
	href: string;
	icon?: any;
};

const pathname = Astro.url?.pathname ?? '/';

const navItems: NavItem[] = [
	{ label: 'Home', href: '/', icon: HomeIcon },
	{ label: 'About', href: '/about', icon: MessageIcon },
	{ label: 'Projects', href: '/projects', icon: BriefcaseIcon },
	{ label: 'Services', href: '/services', icon: PuzzleIcon },
	{ label: 'Contact', href: '/contact', icon: EmailIcon },
];

const isActive = (href: string) => {
	if (href === '/') return pathname === '/';
	return pathname === href || pathname.startsWith(href + '/');
};
---

<aside id="sidebar" class="fixed bg-neutral-100 h-full w-1/2 shadow-sm z-10 transition top-0 left-0 -translate-x-full shrink-0 lg:relative lg:block lg:translate-x-0 lg:shadow-none lg:w-auto">
	<div class="sticky top-0 flex h-screen flex-col px-6 py-8">
		<div class="flex items-center gap-3">
			<img
				src="/profile.jpg"
				alt="Profile photo"
				width="44"
				height="44"
				class="h-11 w-11 rounded-full object-cover"
				loading="eager"
			/>
			<div class="leading-tight">
				<div class="text-sm font-semibold text-neutral-900">Saransh Kawadkar</div>
				<div class="text-xs text-neutral-500">Software Engineer</div>
			</div>
		</div>

		<nav class="mt-8">
			<ul class="space-y-1">
				{navItems.map((item) => (
					<li>
						<a
							href={item.href}
							class:list={[
								'flex items-center gap-3 rounded-xl pl-3 pr-12 py-2 text-sm text-neutral-700 transition',
								isActive(item.href)
									? 'bg-white text-neutral-900 shadow-sm ring-1 ring-black/5'
									: 'hover:bg-white/60 hover:text-neutral-900',
							]}
						>
							{item.icon && <item.icon aria-hidden="true" className={`h-4 w-4${isActive(item.href) ? ' text-blue-700' : ''}`} />}
							<span>{item.label}</span>
						</a>
					</li>
				))}
			</ul>
		</nav>

		<div class="mt-10">
			<div class="text-xs font-semibold uppercase tracking-wide text-neutral-500">Socials</div>
			<ul class="mt-3 space-y-2 text-sm">
				<li>
					<a class="flex items-center gap-2 text-neutral-600 hover:text-neutral-900" href="https://github.com/saransh-283" target="_blank" rel="noopener">
						<GithubIcon className="h-4 w-4" />
						<span>Github</span>
					</a>
				</li>
				<li>
					<a class="flex items-center gap-2 text-neutral-600 hover:text-neutral-900" href="https://www.linkedin.com/in/saransh-kawadkar" target="_blank" rel="noopener">
						<LinkedinIcon className="h-4 w-4" />
						<span>LinkedIn</span>
					</a>
				</li>
				<li>
					<a class="flex items-center gap-2 text-neutral-600 hover:text-neutral-900" href="https://www.fiverr.com/saranshkk" target="_blank" rel="noopener">
						<FiverrIcon className="h-4 w-4" />
						<span>Fiverr</span>
					</a>
				</li>
			</ul>
		</div>
	</div>
</aside>
<div id="sidebar-toggle" class="absolute h-0.5 w-8 right-8 top-8 bg-gray-700 lg:hidden before:content-[''] before:absolute before:right-0 before:-top-2 before:h-0.5 before:w-8 before:bg-gray-700 before:transition after:content-[''] after:absolute after:right-0 after:-bottom-2 after:h-0.5 after:w-8 after:bg-gray-700 after:transition"></div>

<script>
	const toggle = document.getElementById('sidebar-toggle');
	const sidebar = document.getElementById('sidebar');
	
	toggle.addEventListener('click', () => {
		sidebar.classList.toggle('-translate-x-full');
		sidebar.classList.toggle('translate-x-0');

		toggle.classList.toggle('before:-rotate-45')
		toggle.classList.toggle('before:-top-2');

		toggle.classList.toggle('after:rotate-45')
		toggle.classList.toggle('after:-bottom-2');

		toggle.classList.toggle('bg-transparent');
		toggle.classList.toggle('bg-gray-700');	
	});
</script>