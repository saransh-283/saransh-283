---
export type ServiceCardProps = {
	title: string;
	description: string;
	image?: string;
	tags?: string[];
};

const { title, description, image, tags = [] } = Astro.props as ServiceCardProps;
---

<article class="flex items-start gap-6">
	<div class="h-[110px] w-[150px] overflow-hidden rounded-xl bg-neutral-100 ring-1 ring-black/5">
		{image ? (
			<img src={image} alt={title} loading="lazy" class="h-full w-full object-cover" />
		) : (
			<div class="h-full w-full" />
		)}
	</div>

	<div class="min-w-0">
		<h3 class="text-base font-semibold text-neutral-900">{title}</h3>
		<p class="mt-1 text-sm leading-6 text-neutral-500">{description}</p>
		{tags.length > 0 && (
			<div class="mt-3 flex flex-wrap gap-2">
				{tags.map((tag) => (
					<span class="rounded-md bg-neutral-50 px-2 py-1 text-[11px] font-medium text-neutral-500 ring-1 ring-black/5">
						{tag}
					</span>
				))}
			</div>
		)}
	</div>
</article>
