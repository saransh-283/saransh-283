---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
import ServiceCard from "@components/services/ServiceCard.astro";
import PuzzleIcon from "@icons/puzzle.astro";

const services = (await getCollection("services")).sort((a, b) => (a.data.order ?? 999) - (b.data.order ?? 999));
---

<Layout title="Services | Saransh">
  <main class="mx-auto max-w-3xl">
    <header class="pt-4 text-center">
      <div class="flex gap-6 justify-center items-center">
        <div class="h-9 w-9 text-emerald-400">
          <PuzzleIcon className="h-12 w-12" />
        </div>
        <h1 class="mt-3 text-4xl font-extrabold tracking-tight text-neutral-900">Services</h1>
      </div>
      <p class="mx-auto mt-3 max-w-xl text-sm leading-6 text-neutral-500">How I can help you ship faster with fewer bugs.</p>
    </header>

    <section class="mt-10 space-y-8">
        {services.map((service) => (
            <ServiceCard href={service.data.href} title={service.data.title} description={service.data.summary} tags={service.data.tags} />
        ))}
    </section>
  </main>
</Layout>
