---
import Layout from '@layouts/Layout.astro';
import ProjectRow from '@components/projects/ProjectRow.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects | John Doe">
	<main class="mx-auto max-w-3xl">
		<header class="pt-4 text-center">
			<div class="mx-auto h-9 w-9 text-amber-400 text-3xl">âš¡</div>
			<h1 class="mt-3 text-4xl font-extrabold tracking-tight text-neutral-900">What I've been working on</h1>
		</header>

		<section class="mt-10 space-y-8">
			{projects.map((project) => (
				<ProjectRow
					title={project.data.title}
					description={project.data.description}
					href={`/projects/${project.slug}`}
					thumbnail={project.data.thumbnail}
					tags={project.data.tags}
				/>
			))}
		</section>
	</main>
</Layout>
